#include <stdio.h>
#include <stdlib.h>
#define max 5

void insert(int item,int q[],int*r){
int j;
if(*r==max-1)
{
    printf("queue is overflow\n");
}
j=*r;
while(j>=0&&item<q[j])
{
    q[j+1]=q[j];
    j--;
}
q[j+1]=item;
(*r)++;

}
int deleteion(int *f,int *r,int q[])
{
    if(*f>*r)
        return -1;
    else
        return(q[(*f)++]);
}

void display(int*r,int*f,int q[])
{
    if(*f>*r)
        printf("queue is empty");
    else{
        for(int i=*f;i<=*r;i++)
            printf("%d",q[i]);
    }
    printf("\n");
}

int main()
{
int front,rear, delete_item,ch,item,q[20];
front=0;
rear=-1;
while(1){
    printf("Enter your choice\n");
    printf("1.insert 2.Delete 3.Display 4.Exist\n");
    scanf("%d",&ch);
    switch(ch)
    {
      case 1:printf("Enter the item\n");
             scanf("%d",&item);
             insert(item,q,&rear);
             break;
     case 2:delete_item=deleteion(&front,&rear,q);
             if(delete_item==-1)
             printf("queue underflow\n");
             else
            printf("Delete item =%d\n",delete_item);
            break;
    case 3:display(&rear,&front,q);
            break;
    default :exit(0);


    }
}
    return 0;
}
